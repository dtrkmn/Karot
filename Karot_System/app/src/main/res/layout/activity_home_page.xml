<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/homepage"
    tools:context="com.example.casper.karot_system.HomePage">
<RelativeLayout

    android:id="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ff000000"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="105dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fieldworks Analysis"
        android:id="@+id/fieldwork"
        android:textSize="30dp"
        android:textColor="#fffefeff"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/add_core"
        android:background="@drawable/add"
        android:layout_below="@+id/fieldwork"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:layout_below="@+id/add_core"
        android:text="Add Core"
        android:textSize="22dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textColor="#fff5fff5"/>
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/show_cores"
        android:layout_below="@+id/fieldwork"
        android:background="@drawable/view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"

        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_below="@+id/show_cores"
        android:text="View Data"
        android:textSize="22dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:textColor="#fff5fff5"/>

</RelativeLayout>
    <RelativeLayout

        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ff000000"
        android:layout_marginBottom="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Labworks Analysis"
            android:id="@+id/labwork"
            android:textSize="30dp"
            android:textColor="#fffefeff"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/download"
            android:background="@drawable/download"
            android:layout_below="@+id/labwork"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/download_text"
            android:layout_below="@+id/download"
            android:text="Download Data"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#fff5fff5"/>
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/upload"
            android:layout_below="@+id/labwork"
            android:background="@drawable/upload"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"

            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_text"
            android:layout_below="@+id/upload"
            android:text="Upload Data"
            android:textSize="22dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textStyle="bold"
            android:textColor="#fff5fff5"/>

    </RelativeLayout>



</RelativeLayout>
