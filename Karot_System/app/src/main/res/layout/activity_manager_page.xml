<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.casper.karot_system.ManagerPage"
    android:background="@drawable/logback"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manager_name"
        android:textColor="#fff2f8ff"
        android:textSize="20sp"
        />
    <TextView android:text="Edit Profile" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile_manager"
        android:textColor="#fff2f8ff"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Lake"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:textColor="#fffff9f2"
        android:textStyle="bold"/>
    <AutoCompleteTextView
        android:id="@+id/lake1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:background="#fffefffd"
        android:textSize="25sp"/>
    <Button
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_activate"
        android:text="ACTIVATE"
        android:layout_below="@+id/lake1"
        android:layout_marginTop="20dp"
        android:background="@drawable/ozelbutton2"
        android:textColor="#fff8fff7"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deactivate Lake"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:textColor="#fffff9f2"
        android:textStyle="bold"/>
    <AutoCompleteTextView
        android:id="@+id/lake2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:background="#fffefffd"
        android:textSize="25sp"/>
    <Button
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_deactivate"
        android:text="DEACTIVATE"
        android:layout_below="@+id/lake2"
        android:layout_marginTop="20dp"
        android:background="@drawable/ozelbutton2"
        android:textColor="#fff8fff7"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:id="@+id/homepge"
        android:text="HOME PAGE"
        android:background="@drawable/ozelbutton"
        android:layout_marginTop="400dp"/>


</RelativeLayout>
